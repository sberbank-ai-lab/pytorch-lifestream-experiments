{
  "dataset": {
    "clip_transactions": {
      "min_len": 1000,
      "max_len": 1000
    }
  },

  "params": {
    "device": "cuda",
    "trx_encoder": {
      "embeddings": {
        "mcc_code": {"in": 200},
        "tr_type": {"in": 100}
      },
      "numeric_values": {
        "amount": "identity"
      }
    },
    "norm_scores": false,
    "valid": {
      "batch_size": 1024,
      "num_workers": 16,
      "max_seq_len": 1200
    }
  },

  "model_path": {
    "models": [
      "models/gender_ml_model.p"
    ]
  },

  "output": {
    "path": "../data/gender/embeddings",
    "format": "pickle",
    "columns": ["customer_id"]
  },

  "trx_features": {
    "path": "../data/gender/trx_features",
    "format": "pickle",
    "columns": ["customer_id"]
  }
}
