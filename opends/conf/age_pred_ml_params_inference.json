{
  "dataset": {
    "clip_transactions": {
      "min_len": 1000,
      "max_len": 1000
    }
  },

  "params": {
    "device": "cuda",
    "trx_encoder": {
      "embeddings": {
        "trans_date": {"in": 800},
        "small_group": {"in": 250}
      },
      "numeric_values": {
        "amount_rur": "identity"
      }
    },
    "norm_scores": false,
    "valid": {
      "batch_size": 1024,
      "num_workers": 16,
      "max_seq_len": 1200
    }
  },

  "model_path": {
    "models": [
      "models/age_pred_ml_model.p"
    ]
  },

  "output": {
    "path": "../data/age-pred/embeddings",
    "format": "pickle",
    "columns": ["client_id"]
  },

  "trx_features": {
    "path": "../data/age-pred/trx_features",
    "format": "pickle",
    "columns": ["client_id"]
  }
}
