{
  "params": {
    "experiment": {
      "name": "default"
    },
    "device": "cuda",
    "model_type": "transf",
    "transf": {
      "train_starter": true,
      "shared_layers": false,
      "input_size": 256,
      "n_heads": 8,
      "dim_hidden": 256,
      "dropout": 0.1,
      "n_layers": 6,
      "use_positional_encoding": false,
      "max_seq_len": 1200,
      "use_after_mask": false,
      "use_src_key_padding_mask": false
    },
    "trx_encoder": {
      "norm_embeddings": false,
      "embeddings_noise": 0.003,
      "embeddings": {
        "trans_date": {"in": 800, "out": 16},
        "small_group": {"in": 250, "out": 16}
      },
      "numeric_values": {
        "amount_rur": "identity"
      }
    },
    "use_normalization_layer": true,
    "lr_scheduler": {
      "step_size": 1000,
      "step_gamma": 1,
      "# warmup": {
        "warmup_start_value": 0.00001,
        "warmup_end_value":  0.001,
        "warmup_duration": 5
      }
    },
    "train": {
      "num_workers": 16,
      "batch_size": 64,
      "split_strategy": {
        "split_strategy": "SampleSlices",
        "split_count": 5,
        "cnt_min": 25,
        "cnt_max": 150
      },
      "sampling_strategy": "HardNegativePair",
      "trx_dropout": 0.01,
      "max_seq_len": 1200,
      "neg_count": 5,
      "loss": "ContrastiveLoss",
      "margin": 0.5,
      "lr": 0.0005,
      "weight_decay": 0.0,
      "n_epoch": 60,
      "# checkpoints": {
        "save_interval": 5,
        "n_saved": 1000,
        "dirname": "models/checkpoints/",
        "filename_prefix": "transf",
        "create_dir": true
      }
    },
    "norm_scores": false,
    "valid": {
      "batch_size": 64,
      "num_workers": 16,
      "split_strategy": {
        "split_strategy": "SampleSlices",
        "split_count": 5,
        "cnt_min": 25,
        "cnt_max": 100
      },
      "max_seq_len": 1200
    }
  },

  "stats": {
    "path": "runs/transf_result.json"
  },

  "save_model": true,
  "model_path": {
    "model": "models/transf_model.p",
    "only_encoder": false
  },

  "output": {
    "path": "data/transf_embeddings",
    "format": "pickle",
    "columns": ["client_id"]
  }
}
